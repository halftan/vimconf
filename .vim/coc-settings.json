{
    "yaml.format.enable": true,
    "yaml.schemas": {
        "kubernetes": "*.k8s.yaml",
        "http://json.schemastore.org/ansible-stable-2.5": "*.ansible.yaml"
    },
    "languageserver": {
        "golang": {
            "command": "gopls",
            "filetypes": ["go"],
            "rootPatterns": ["go.mod", ".git/", ".hg/"],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    },
    "python.jediEnabled": false,
    "snippets.snipmate.enable": false,
    "snippets.ultisnips.directories": [
        "UltiSnips"
    ],
    "snippets.extends": {
        "helm": ["yaml"]
    }
}
