alias ll="ls -lh"
alias la="ls -lAh"
alias sl="ls"
alias glglr="git log --oneline --graph --left-right"

if [[ $ON_MAC_OS ]]; then

  alias flushdns="sudo killall -HUP mDNSResponder"
  alias routes="netstat -nrfinet"
  alias eclimd="~/eclipse/php-neon/Eclipse.app/Contents/Eclipse/eclimd"
  alias ldd="otool -L"

else
  alias open="xdg-open"
fi

alias zrestart="exec $SHELL"
alias mt="multitail --mergeall"
alias ptest="phpunit --verbose --bootstrap tests/bootstrap.php"

alias ss-local="ss-local -c ~/.shadowsocks.json"
alias ss-tunnel="ss-tunnel -U -c ~/.shadowsocks.json -L 8.8.8.8:53 -b 0.0.0.0 -l 5300"

alias youtube-dl-proxy="youtube-dl --proxy=127.0.0.1:18080"

function psg() {
  ps aux | ag -v "ag $1" | ag $1
}

alias rg="rg -S"

function randmac() {
  openssl rand -hex 6 | sed 's/\(..\)/\1:/g; s/.$//'
}

function i() {
  curl https://ip.cn/$1
}

#alias for cnpm
alias cnpm="npm --registry=https://registry.npm.taobao.org \
  --cache=$HOME/.npm/.cache/cnpm \
  --disturl=https://npm.taobao.org/dist \
  --userconfig=$HOME/.cnpmrc"

# where proxy
proxy () {
  export http_proxy="http://127.0.0.1:18080"
  export https_proxy="http://127.0.0.1:18080"
  echo "HTTP Proxy on"
}

# where noproxy
noproxy () {
  unset http_proxy
  unset https_proxy
  echo "HTTP Proxy off"
}

gpref() {
    git push origin HEAD:refs/for/$(git_current_branch)
}

xns() {
    if [[ -z $1 ]]; then
        echo Please provide a namespace
        return
    fi
    echo Switching to $1
    kubectl config set-context $(kubectl config current-context) --namespace=$1
}
